{
  "keywords": [],
  "name": "tray-calc",
  "version": "v0.0.1-alpha",
  "author": "Alask Code",
  "license": "LGPL-3.0-only",
  "main": "electron/main.js",
  "description": "Simple Calculator that runs in tray shortcut.",
  "repository": "https://github.com/Alask-code/Tray-Calculator",
  "scripts": {
    "start": "electron .",
    "pre-build": "electron-builder -p never",
    "release": "electron-builder -p always"
  },
  "build": {
    "appId": "com.alaskcode.traycalc",
    "productName": "Tray Calc+",
    "extraFiles": [
      "README.md",
      "NOTICE.md",
      "LICENSE.md"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "icon": "assets/appIcon.png",
      "oneClick": false,
      "publish": {
        "provider": "github",
        "owner": "Alask-code",
        "repo": "Tray-Calculator",
        "private": true
      }
    }
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.1.4"
  }
}